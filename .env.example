# =============================================================================
# Smart Car VA Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# Smartcar Configuration
# =============================================================================
# Get these from https://dashboard.smartcar.com
SMARTCAR_CLIENT_ID=your_smartcar_client_id
SMARTCAR_CLIENT_SECRET=your_smartcar_client_secret

# OAuth redirect URI - must match what's configured in Smartcar dashboard
# For local development: http://localhost:8000/callback
# For production: https://your-app.railway.app/callback
SMARTCAR_REDIRECT_URI=http://localhost:8000/callback

# API mode: "live" for real vehicles, "simulated" for testing
SMARTCAR_MODE=simulated

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# At least one of these is required for natural language processing
# Get OpenAI key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# Get Anthropic key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# Default provider: "openai" or "anthropic"
DEFAULT_LLM_PROVIDER=openai

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from your Supabase project settings
# Project Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Service role key for admin operations (optional but recommended)
# Project Settings > API > service_role key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: "development" or "production"
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Secret key for session management (generate a random string)
SECRET_KEY=change-this-to-a-random-secret-key

# Server configuration
PORT=8000
HOST=0.0.0.0
